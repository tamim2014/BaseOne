<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/slate/bootstrap.min.css">
        <!-- Liste des  icons : https://origin.fontawesome.com/icons?d=gallery -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="/css/liens.css" rel="stylesheet" />
        <!-- menu hamberguer + son moteur jQuery  --> 
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>          
        <script src="/js/menu_hamberguer.js"></script>   
        
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
            <nav class="navbar  navbar-expand-lg navbar-light bg-light  ">
                    <!-- menu hamberguer -->
                   
                            <a id ="action_menu_hamberguer" class="navbar-brand " href="#"><i class="fa fa-bars " style="margin-left:-20px;" ></i> </a>
                            <div id ="reponse_menu_hamberguer" class="dropdown-menu " x-placement="bottom-start" style="position: absolute; will-change: transform; top: 12px; left: 0px; transform: translate3d(0px, 41px, 0px);">
                                <a class="dropdown-item" href="#">Catégorie1</a>
                                <a class="dropdown-item" href="#">Catégorie2</a>
                                <a class="dropdown-item" href="#">Catégorie3</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Fiches techniques</a>
                            </div>
                  
                    <!-- </>menu hamberguer -->
                    <!--
                    <a class="navbar-brand" href="#"><i class="fa fa-bars " ></i> </a>
                    -->
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon"></span>
                    </button>
                  
                    <div class="collapse navbar-collapse" id="navbarColor03">
                      <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                          <a class="nav-link" href="{{ path('page_list' )}}"><i class="fa fa-home " ></i> Accueil <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="{{path('links')}}"><i class="fa fa-microchip"></i> Technologies</a>
                        </li>
                        <li class="nav-item active">
                          <a href="{{path('security_registration')}}" class="nav-link">
                            <i class="fa fa-user-plus"></i> Inscription
                          </a>
                        </li>
                        {% if not app.user %}
                        <li class="nav-item active">
                          <a href="{{path('security_login')}}" class="nav-link">
                            <i class="fa fa-sign-in"></i> Connexion
                          </a>
                        </li>
                        {% else %}
                        <li class="nav-item active">
                          <a href="{{path('security_logout')}}" class="nav-link">
                            <i class="fa fa-sign-out "></i> Déconnexion
                          </a>
                        </li>
                        {% endif %}

                      </ul>
                      <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="text" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                      </form>
                    </div>
                  </nav>
        <div class="container" >
               
                {% block body %}{% endblock %}
        </div>      
        {% block javascripts %}{% endblock %}

    </body>
</html>
