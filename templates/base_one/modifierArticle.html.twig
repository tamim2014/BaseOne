{%  extends 'base.html.twig' %}
{% form_theme f 'bootstrap_4_layout.html.twig' %}   
{% block stylesheets %}
    <!-- fav-icon -->
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="/css/HoverableSidenavButtons.css">
{% endblock %}
{% block javascripts %}
    <!-- Moteur générique(jQuery) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- menu accordeon  -->           
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
{% endblock %}
{%  block body %}
    <!-- Hoverable sidenav buttons --> 
    <div id="mySidenav"  >
        <a href="#" id="angular">Angular</a>
        <a href="#" id="bootstrap">Bootstrap</a>
        <a href="#" id="symfony">Symfony</a>
        <a href="#" id="webservice">SOAP</a>
    </div>
    <div class="container  " >
            <div class="panel  panel-info  " >
            <!--   Mise à jour -->
            <div class="panel-heading "></div>
            <div class="panel-body">
                        <div class="col-md-12  col-xs-12  ">
                        <table class=" table table-striped table-bordered table-hover " >
                            <tr >
                                <th>Categoy</th>
                                <th>TITRE</th>
                                <th>AUTEUR</th>
                                <th>PHOTO</th>
                                <th>...</th>
                                <th>...</th>
                            </tr>
                            <tr  style="background-color: #999999">
                                {{ form_start(f) }}
                                <td>{{ form_widget(f.category) }} </td>
                                <td> {{ form_widget(f.titre) }} </td>
                                <td>{{ form_widget(f.auteur) }}</td>
                                <td>{{ form_widget(f.image) }}</td>
                                <td>
                                    <button type="submit" class="btn btn-secondary">
                                        <a href="#">
                                            <i class="fa fa-plus " ></i> 
                                        </a> 
                                    </button>
                                </td>
                                <td> ... </td>
                                {{ form_end(f) }}
                            </tr>  
                            {% for artcle in listedesarticles %}
                                <tr  >                   
                                    <td>{{ artcle.category.title }}</td>
                                    <td>{{ artcle.titre }}</td>
                                    <td>{{ artcle.auteur }}</td>
                                    <td>
                                        <a href="{{ path('page_modif') }}{{ artcle.id }}/{{ 'edit' }}"  >
                                            <img src="{{ artcle.image}}" width="40" height="30" alt=""/></td>
                                        </a>  
                                    <td>
                                        <a href="#">
                                            <!-- <span class="glyphicon glyphicon-edit"></span> -->
                                            <i class="fa fa-edit"></i>
                                        </a>                                    
                                    </td>
                                    <td>
                                        <a href="{{ path('page_delet', {'id': artcle.id}) }}" onclick="return confirm('Etes vous sûr...?')" >
                                            <!-- <span class="glyphicon glyphicon-trash"></span> -->
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>                                   
                                </tr>
                            {% endfor %}
                        </table>
                        </div><!-- col-md-12  col-xs-12 -->   
                </div><!-- panel-body -->
                </div><!-- panel-info -->
        </div><!-- container -->
{%  endblock %}